<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sign">
 
 <!-- 회원가입 -->
 	<insert id="signUp">
 		INSERT INTO dbsewoomch.MJA_USER_INFO(EMAIL, ID, NICK_NAME, PASSWORD)
		 VALUES(#{EMAIL}, #{ID}, #{NICK_NAME}, #{PASSWORD});
 	</insert>
 	
	<select id="overlapCheck" resultType="int">
		SELECT COUNT(*)
		FROM MJA_USER_INFO
		WHERE ${valueType} = #{value}
	</select>
</mapper>